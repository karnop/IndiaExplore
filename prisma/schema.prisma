generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LocationType {
  STATE
  CITY
  PLACE
}

model BannerImage {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  url        String
  location   Location @relation(fields: [locationId], references: [id])
  locationId String   @db.ObjectId
}

model Location {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String       @unique
  type        LocationType
  description String?
  parentId    String?      @db.ObjectId
  parent      Location?    @relation("Hierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Location[]   @relation("Hierarchy")

  // Computed full path for routing, e.g. "state-slug/city-slug/place-slug"
  address      String        @unique
  BannerImages BannerImage[]
}
